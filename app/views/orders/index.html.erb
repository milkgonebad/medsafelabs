<h1>Listing Orders for <%= @customer.first_name %> <%= @customer.last_name %></h1>

<table>
  <thead align="left">
    <tr>
      <th>Order ID</th>
      <th>| Created At</th>	
      <th>| Quantity</th>
      <th>| Payment Type</th>
      <th>| Total</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody align="left">
    <% @orders.each do |order| %>
      <tr>
      	<td><%= order.id %></td>
      	<td>| <%= order.created_at %></td>
      	<td>| <%= order.quantity %></td>	
      	<td>| <%= order.payment_type %></td>
      	<td>| <%= order.total %></td>
      	<td>| <%= link_to 'View Tests', user_tests_path(@customer, :order_id => order.id) %></td>
        <td>| <%= link_to 'Show', user_order_path(@customer, order) %></td>
        <td>| <%= link_to 'Edit', edit_user_order_path(@customer, order) %></td>
        <td>| <%= link_to 'Destroy', "#", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_user_order_path(@customer) %>
