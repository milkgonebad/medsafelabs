	<p>
		<%= link_to "Display Existing QR Codes in PDF", url_for(:action => :print_existing_codes, :format => :pdf), :target => '_blank' %>
	</p>
	<p>
		<%= link_to "Display Existing QR Codes in HTML", url_for(:action => :print_existing_codes), :target => '_blank' %>
	</p>
<% end %>
