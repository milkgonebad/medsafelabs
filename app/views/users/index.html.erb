<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => "Customers" %></h1>
</div>
<% if params[:all_customers] %>
	<div>Viewing:  <em>All Customers</em></div>
	<div><%= link_to 'View Only Active Customers', users_path %></div>
<% else %>
	<div>Viewing:  <em>Active Customers</em></div>
	<div><%= link_to 'View All Customers', users_path(:all_customers => true) %></div>
<% end %>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:last_name) %></th>
      <th><%= model_class.human_attribute_name(:first_name) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th>Orders</th>
      <th>Tests</th>
      <th>Re-Invite</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.id, user_path(user) %></td>
        <td><%= user.last_name %></td>
        <td><%= user.first_name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'View Orders', user_orders_path(user) %>
        <td><%= link_to 'View Tests', user_tests_path(user) %></td>
        <td><% if !user.registered? and user.active? %>
        		<%= link_to 'Re-Invite', reinvite_path(user), :class => 'btn btn-mini'%>
        	<% end %>
        </td>
        <td>
          	<%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_user_path(user), :class => 'btn btn-mini' %>
	      	<% if user.active? %>
	          	<%= link_to t('.destroy', :default => "Deactivate"),
	                      user_path(user),
	                      :method => :delete,
	                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
          	<% else %>
          		<%= link_to t('.destroy', :default => "Reactivate"),
	                      reactivate_path(user),
                      :class => 'btn btn-mini' %>
          	<% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to t('.new', :default => t("helpers.links.new")), new_user_path, :class => 'btn btn-primary' %>

