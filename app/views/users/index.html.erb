<h1>Listing Customers</h1>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Orders</th>
      <th>Tests</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Orders', user_orders_path(user) %>
        <td><%= link_to 'Tests', user_tests_path(user) %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Deactivate', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% unless user.registered? %>
        	<td><%= link_to 'Re-Invite', reinvite_path(user) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

