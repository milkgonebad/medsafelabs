<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name, :label => 'First Name' %>
    <%= f.input :last_name, :label => 'Last Name' %>
    <%= f.input :email %>
    <%= f.input :address1, :label => 'Mailing Address 1', :input_html => {class: 'required'} %>
    <%= f.input :address2, :label => 'Mailing Address 2' %>
    <%= f.input :city %>
    <%= f.input :state, :collection => STATES.invert, :selected => @user.state, :include_blank => true %>
    <%= f.input :country %>
    <%= f.input :registration_number, :label => 'Patient/State Caregiver/Dispensary Registration Number (if applicable)' %>
    <%= f.input :control_number, :label => 'Control Number (if applicable)' %>
    <%= f.input :expires_on, as: :date, order: [:month, :day, :year], value: nil, label: 'Expiration Date', include_blank: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
