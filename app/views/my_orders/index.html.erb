<%- model_class = Order -%>
<div class="page-header">
  <h1>My Orders</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%= model_class.human_attribute_name(:quantity) %></th>
      <th><%= model_class.human_attribute_name(:payment_type) %></th>
      <th><%= model_class.human_attribute_name(:total) %></th>
      <th>Test Results</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.id, my_order_path(order) %></td>
        <td><%=l order.created_at %></td>
        <td><%= order.quantity %></td>	
      	<td><%= order.payment_type %></td>
      	<td><%= order.total %></td>
      	<td><%= link_to 'View Test Results', results_path(:order_id => order.id) %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      my_order_path(order), :class => 'btn btn-mini' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>