<%= simple_form_for(@administrator, url: (@administrator.new_record? ? administrators_path : administrator_path(@administrator))) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :role, collection: User.assignable_admin_types, selected: @administrator.role, include_blank: true, required: true %>
    <% if @administrator.new_record? %> 
    	<%= f.input :password %>
    	<%= f.input :password_confirmation %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
